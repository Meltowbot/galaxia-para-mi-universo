    <style>
        body { margin: 0; background: #000; overflow: hidden; font-family: 'Arial', sans-serif; }
        canvas { display: block; }
        .mensaje {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            text-shadow: 0 0 20px rgba(255,255,255,0.8), 0 0 30px #ff00ff;
            pointer-events: none;
            width: 90%;
        }
        h1 { font-size: 2.5rem; margin-bottom: 10px; animation: glow 2s ease-in-out infinite alternate; }
        p { font-size: 1.2rem; opacity: 0.9; }
        @keyframes glow {
            from { text-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #e60073; }
            to { text-shadow: 0 0 20px #fff, 0 0 30px #ff4da6, 0 0 40px #ff4da6; }
        }
