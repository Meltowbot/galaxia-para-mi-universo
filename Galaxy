<body>
    <div class="mensaje">
        <h1>Te amo, mi cielo ðŸ’–</h1>
        <p>TÃº eres mi galaxia favorita en todo el universo âœ¨</p>
    </div>
    <canvas id="galaxy"></canvas>
    <script>
        const canvas = document.getElementById('galaxy');
        const ctx = canvas.getContext('2d');
        let stars = [];
        function init() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            stars = [];
            const colors = ['#ffffff', '#ffe9ff', '#d1e3ff', '#ffd1d1'];
            for (let i = 0; i < 600; i++) {
                stars.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    size: Math.random() * 1.5,
                    color: colors[Math.floor(Math.random() * colors.length)],
                    speed: Math.random() * 0.05 + 0.01,
                    angle: Math.random() * Math.PI * 2,
                    dist: Math.random() * (canvas.width > canvas.height ? canvas.width : canvas.height) / 1.5
                });
            }
        }
        function draw() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            stars.forEach(s => {
                let centerX = canvas.width / 2;
                let centerY = canvas.height / 2;
                s.angle += s.speed * 0.1;
                let x = centerX + Math.cos(s.angle) * s.dist;
                let y = centerY + Math.sin(s.angle) * s.dist;
                ctx.beginPath();
                ctx.arc(x, y, s.size, 0, Math.PI * 2);
                ctx.fillStyle = s.color;
                ctx.shadowBlur = 5;
                ctx.shadowColor = s.color;
                ctx.fill();
            });
            requestAnimationFrame(draw);
        }
        window.addEventListener('resize', init);
        init();
        draw();
    </script>
</body>
